{
  "name": "local-assistant",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"yarn workspace web dev\" \"wait-on tcp:3000 && yarn workspace desktop dev\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "build:shared": "turbo run build --filter=./packages/shared-types"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "turbo": "^2.8.7",
    "typescript": "5.9.2",
    "wait-on": "^9.0.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
